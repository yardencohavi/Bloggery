<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/header_category"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F5F5F5"
        android:enabled="false"
        android:text="Category : Shirts"
        android:textColor="#fff"
        android:textSize="12sp"
        app:backgroundTint="#000000" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Title:"
        android:textColor="#7B3B8C"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/item_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_image"
        android:cropToPadding="true"
        android:padding="2dp"
        android:scaleType="centerCrop" />


    <TextView

        android:id="@+id/item_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_image"
        android:layout_alignLeft="@id/item_image"
        android:layout_marginTop="100dp"
        android:text="Store: Zara"
        android:textColor="#000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_store"
        android:layout_alignLeft="@id/item_image"
        android:layout_marginTop="10dp"
        android:text="Price : 100$"
        android:textColor="#000"
        android:textSize="25sp"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"


            android:background="#F5F5F5"
            android:text="Edit"
            android:textSize="18sp"
            app:backgroundTint="#CE068C" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/edit_button"
            android:background="#F5F5F5"
            android:text="Delete"
            android:textSize="18sp"
            app:backgroundTint="#CE068C" />

    </RelativeLayout>


</RelativeLayout>